{
  "name": "lifeforge-monorepo",
  "private": true,
  "description": "A comprehensive self-hosted all-in-one personal management system",
  "version": "25w29.0",
  "license": "MIT",
  "author": "LifeForge (https://github.com/Lifeforge-app)",
  "homepage": "https://docs.lifeforge.melvinchia.dev",
  "repository": {
    "type": "git",
    "url": "https://github.com/Lifeforge-app/lifeforge.git"
  },
  "workspaces": [
    "./server",
    "./client",
    "./shared",
    "./packages/*",
    "./apps/*"
  ],
  "scripts": {
    "build": "bun run build:shared && bun run build:ui && bun run build:server && bun run build:client",
    "build:apps:localization-manager": "cd apps/localization-manager && bun run build",
    "build:client": "cd client && bun run build",
    "build:server": "cd server && bun run build",
    "build:shared": "cd shared && bun run build",
    "build:ui": "cd packages/lifeforge-ui && bun run build",
    "dev": "concurrently \"bun run dev:shared\" \"bun run dev:ui\" \"bun run dev:server\" \"bun run dev:client\"",
    "dev:apps:localization-manager": "cd apps/localization-manager && bun run dev",
    "dev:client": "cd client && bun run dev",
    "dev:server": "cd server && bun run dev",
    "dev:shared": "cd shared && bun run dev",
    "dev:ui": "cd packages/lifeforge-ui && bun run dev",
    "lint:client": "cd client && bun run lint",
    "postinstall": "bun run build:shared && bun run build:ui",
    "schema:generate": "cd server && bun run schema:generate",
    "start:server": "cd server && bun run start",
    "types": "bun run types:shared && bun run types:ui && bun run types:server && bun run types:client && bun run types:apps:localization-manager",
    "types:apps:localization-manager": "cd apps/localization-manager && bun run tsc --noEmit",
    "types:client": "cd client && bun run tsc --noEmit",
    "types:server": "cd server && bun run tsc --noEmit",
    "types:shared": "cd shared && bun run tsc --noEmit",
    "types:ui": "cd packages/lifeforge-ui && bun run tsc --noEmit"
  },
  "keywords": [
    "bun",
    "hono",
    "react",
    "vite",
    "monorepo",
    "lifeforge"
  ],
  "devDependencies": {
    "@eslint/js": "^9.26.0",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/crypto-js": "^4.2.2",
    "@types/lodash": "^4.17.16",
    "@types/node": "^22.7.4",
    "@types/react": "^19.1.6",
    "@types/react-dom": "^19.1.6",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "bun-types": "latest",
    "concurrently": "^9.1.2",
    "eslint": "^9.26.0",
    "eslint-config-standard-with-typescript": "^40.0.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-sonarjs": "^3.0.2",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.12",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.31.1"
  }
}