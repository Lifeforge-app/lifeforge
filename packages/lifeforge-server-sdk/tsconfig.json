{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "lib": [
            "ESNext"
        ],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "declaration": true,
        "declarationDir": "./dist",
        "outDir": "./dist",
        "rootDir": "./src",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": false,
        "emitDeclarationOnly": true,
        "baseUrl": "./src"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}